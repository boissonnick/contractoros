{
  "name": "contractoros-web",
  "private": true,
  "version": "0.2.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run postbuild",
    "postbuild": "node -e \"const fs=require('fs'),p=require('path');const dirs=[p.join('.next','static','css'),p.join('.next','static','chunks')];let found=false;for(const g of dirs){if(!fs.existsSync(g))continue;const f=fs.readdirSync(g).find(x=>x.endsWith('.css'));if(!f)continue;found=true;const c=fs.readFileSync(p.join(g,f),'utf8');if(c.includes('@import \\'tailwindcss\\'')){console.error('ERROR: Tailwind CSS not compiled');process.exit(1)}console.log('CSS verified:',f,c.length,'bytes')}if(!found){console.error('ERROR: No CSS file found');process.exit(1)}\" && cp -r .next/static .next/standalone/.next/ && (cp -r public .next/standalone/ 2>/dev/null || true)",
    "start": "HOSTNAME=0.0.0.0 node .next/standalone/server.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
