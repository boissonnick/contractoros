rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user profile exists
    function userProfileExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Helper function to get user's profile (only call after checking userProfileExists)
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if user has admin role
    function isAdmin() {
      return isAuthenticated() &&
             userProfileExists() &&
             getUserProfile().role in ['OWNER', 'PM'];
    }

    // Helper function to check if user belongs to the same org
    function isSameOrg(orgId) {
      return isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read (get) their own profile
      // Admins can read (get + list) any profile
      allow read: if isOwner(userId) || isAdmin();

      // Users can create/set their own profile (onboarding flow uses setDoc with merge)
      // Admins can create user docs (new project page creates client users)
      allow create: if isOwner(userId) || isAdmin();

      // Users can update their own profile
      // Admins can update any profile
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete profiles
      allow delete: if isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      // Admins can list all projects in their org (queries use where('orgId', '==', ...))
      // Other users can read projects they are assigned to
      allow read: if isAuthenticated() && (
        isAdmin() ||
        (userProfileExists() && resource.data.orgId == getUserProfile().orgId && (
          request.auth.uid == resource.data.clientId ||
          request.auth.uid == resource.data.pmId ||
          (resource.data.clientIds != null && request.auth.uid in resource.data.clientIds) ||
          (resource.data.managerIds != null && request.auth.uid in resource.data.managerIds) ||
          (resource.data.workerIds != null && request.auth.uid in resource.data.workerIds)
        ))
      );

      // Only admins can create/update/delete projects
      allow create, update, delete: if isAdmin();

      // Project phases subcollection
      match /phases/{phaseId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAdmin();
      }

      // Quote sections subcollection
      match /quoteSections/{sectionId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAdmin();
      }

      // Client preferences subcollection
      match /clientPreferences/{docId} {
        allow read: if isAuthenticated();
        allow create, update: if isAuthenticated();
        allow delete: if isAdmin();
      }

      // Project activity subcollection (singular - legacy)
      match /activity/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }

      // Project activities subcollection (plural - used by activity page)
      match /activities/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }

      // Project notes subcollection
      match /notes/{noteId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        // Users can update/delete their own notes
        allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
    }

    // Organizations collection
    match /organizations/{orgId} {
      // Users can read their own organization
      allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;

      // Authenticated users can create an org (onboarding for OWNER role)
      allow create: if isAuthenticated();

      // Only admins can modify organizations
      allow update, delete: if isAdmin();

      // Phase templates (org-level, customizable by owner)
      match /phaseTemplates/{templateId} {
        allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
        allow create: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
        allow update, delete: if isAuthenticated() && userProfileExists() && getUserProfile().role == 'OWNER' && getUserProfile().orgId == orgId;
      }

      // Integrations subcollection (org-level third-party connections)
      match /integrations/{integrationId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }

      // Tax rates subcollection (org-level)
      match /taxRates/{taxRateId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }

      // Notification settings subcollection (org-level)
      match /notificationSettings/{settingId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }
    }

    // Invites collection
    match /invites/{inviteId} {
      // Anyone authenticated can read invites (register page checks invite tokens)
      allow read: if isAuthenticated();

      // Admins can create and manage invites
      allow create, update, delete: if isAdmin();
    }

    // Tasks collection
    match /tasks/{taskId} {
      // Org members can read tasks; assigned subs can read their tasks
      allow read: if isAuthenticated();

      // Admins and employees can create tasks
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];

      // Admins can update/delete; assignees can update status/hours
      allow update: if isAuthenticated() && (
        isAdmin() ||
        request.auth.uid in resource.data.assignedTo
      );

      allow delete: if isAdmin();

      // Task comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() &&
          resource.data.userId == request.auth.uid;
      }

      // Task activity subcollection (read-only; written by Cloud Functions or client on mutations)
      match /activity/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }
    }

    // Time entries collection
    match /timeEntries/{entryId} {
      // Users can read their own time entries
      allow read: if isAuthenticated();

      // Users can create their own time entries (field workers clock in/out)
      allow create: if isAuthenticated();

      // Users can update their own time entries (clock out updates)
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins can delete time entries
      allow delete: if isAdmin();
    }

    // Bids collection (subcontractor bids)
    match /bids/{bidId} {
      // Authenticated users can read bids relevant to them
      allow read: if isAuthenticated();

      // Subs can create bids, admins can manage
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (
        resource.data.subId == request.auth.uid || isAdmin()
      );
    }

    // Invoices collection
    match /invoices/{invoiceId} {
      // Authenticated users can read invoices relevant to them
      allow read: if isAuthenticated();

      // Admins and subs can create invoices
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Photos collection
    // Note: Photos are linked to projects, and project access is controlled separately.
    // For org-scoped access, we check that the photo belongs to a project in the user's org.
    match /photos/{photoId} {
      // Authenticated users can read photos in their org's projects
      // This allows reading without orgId field, but project access is validated in app code
      allow read: if isAuthenticated();

      // Authenticated users can upload photos (field workers)
      allow create: if isAuthenticated();

      // Admins can update/delete; users can update their own photos
      allow update: if isAuthenticated() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid
      );
      allow delete: if isAdmin();
    }

    // Issues collection
    match /issues/{issueId} {
      // Authenticated users can read issues in their org
      allow read: if isAuthenticated();

      // Authenticated users can report issues
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Daily logs collection
    match /dailyLogs/{logId} {
      // Authenticated users can read logs
      allow read: if isAuthenticated();

      // Admins and PMs can create/manage logs
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Schedule items collection
    match /scheduleItems/{itemId} {
      // Authenticated users can read schedule items
      allow read: if isAuthenticated();

      // Only admins can modify schedule
      allow create, update, delete: if isAdmin();
    }

    // Schedule assignments collection
    match /scheduleAssignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Availability defaults (weekly recurring)
    match /availabilityDefaults/{defaultId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() &&
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Availability overrides (date-specific)
    match /availability/{availId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() &&
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Scopes collection (scope of work)
    match /scopes/{scopeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Subcontractors collection
    match /subcontractors/{subId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin();
    }

    // Sub assignments collection
    match /sub_assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Client onboarding tokens collection
    match /clientOnboardingTokens/{tokenId} {
      // Anyone can read (public onboarding page validates tokens)
      allow read: if true;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      // Allow update for marking token as used (public page does this)
      allow update: if true;
      allow delete: if isAdmin();
    }

    // Change orders collection
    match /changeOrders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Bid solicitations collection
    match /bidSolicitations/{solId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // SOW templates collection
    match /sowTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin();
    }

    // Activity log collection
    match /activityLog/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Activity collection (org-level activity feed)
    match /activity/{activityId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.organizationId == getUserProfile().orgId;
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.organizationId == getUserProfile().orgId;
      allow update, delete: if false;
    }

    // Expenses collection
    match /expenses/{expenseId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow delete: if isAdmin();
    }

    // RFIs collection (Request for Information)
    match /rfis/{rfiId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Punch items collection
    match /punchItems/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Change orders collection (alternate name used by useChangeOrders hook)
    match /change_orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Estimates collection
    match /estimates/{estimateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Weekly timesheets collection
    match /weeklyTimesheets/{timesheetId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow delete: if isAdmin();
    }

    // Geofences collection
    match /geofences/{geofenceId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Payroll config collection
    match /payrollConfig/{configId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Financials collection (project financial summaries)
    match /financials/{financialId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Integrations collection (third-party connections)
    match /integrations/{integrationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin();
    }

    // Submittals collection
    match /submittals/{submittalId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Selections collection (client material selections)
    match /selections/{selectionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Tax rates collection (top-level, org-scoped)
    match /taxRates/{taxRateId} {
      allow read: if isAuthenticated() && userProfileExists() && resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() && userProfileExists() && request.resource.data.orgId == getUserProfile().orgId;
      allow update: if isAuthenticated() && userProfileExists() && resource.data.orgId == getUserProfile().orgId;
      allow delete: if isAdmin();
    }

    // Notification preferences collection (user-level preferences)
    match /notificationPreferences/{prefId} {
      // Users can read their own notification preferences
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Users can create their own notification preferences
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Users can update their own notification preferences
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Users can delete their own notification preferences (or admins)
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Notifications collection (app notifications for users)
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // System can create notifications (Cloud Functions), or admins
      allow create: if isAuthenticated();

      // Users can mark their own notifications as read
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Admins can delete notifications
      allow delete: if isAdmin();
    }

    // Clients collection (CRM)
    match /clients/{clientId} {
      // Org members can read clients in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create clients
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update clients
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Only admins can delete clients
      allow delete: if isAdmin();
    }

    // Communication logs collection (client communication tracking)
    match /communicationLogs/{logId} {
      // Org members can read logs in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Authenticated org members can create logs
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Creator or admins can update logs
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        (resource.data.createdBy == request.auth.uid || getUserProfile().role in ['OWNER', 'PM']);

      // Only admins can delete logs
      allow delete: if isAdmin();
    }

    // Signature requests collection (e-signature)
    match /signatureRequests/{requestId} {
      // Org members can read signature requests in their org
      // Public access via magic link token handled separately
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create signature requests
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update signature requests (status changes, etc.)
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Never delete signature requests (audit trail)
      allow delete: if false;
    }

    // Public signature access (magic link signing)
    // This allows unauthenticated users to read/update via magic link token
    // Token validation happens in application code
    match /signatureRequests/{requestId} {
      // Allow read for magic link access (token validated in app)
      allow read: if true;

      // Allow limited updates for signing (signature data, status)
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['signers', 'status', 'auditTrail', 'updatedAt']);
    }

    // Photo albums collection
    match /photoAlbums/{albumId} {
      // Org members can read albums in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Public albums can be read via share token (token validated in app)
      allow read: if resource.data.isPublic == true;

      // Admins can create albums
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update albums
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Only admins can delete albums
      allow delete: if isAdmin();
    }

    // Before/after photo pairs collection
    match /beforeAfterPairs/{pairId} {
      // Authenticated users can read pairs
      allow read: if isAuthenticated();

      // Admins and employees can create pairs
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];

      // Admins can update/delete pairs
      allow update, delete: if isAdmin();
    }

    // Stripe payments collection
    match /stripePayments/{paymentId} {
      // Org members can read payments in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Only server/Cloud Functions should create payments
      // Client-side creates via API routes
      allow create: if false;

      // Admins can update payment notes/metadata
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Payments should never be deleted (audit trail)
      allow delete: if false;
    }

    // Payment links collection
    match /paymentLinks/{linkId} {
      // Org members can read payment links in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Public read access for payment link validation via token
      // Token-based validation happens in application code
      allow read: if true;

      // Admins can create payment links
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Allow updates for marking link as used (status changes)
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['status', 'usedAt', 'paymentId', 'updatedAt']);

      // Never delete payment links (audit trail)
      allow delete: if false;
    }

    // Saved payment methods collection
    match /savedPaymentMethods/{methodId} {
      // Org members can read saved methods in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Only server/Cloud Functions should create saved methods
      allow create: if false;

      // Admins can update (set default, soft delete)
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Soft delete only - never hard delete
      allow delete: if false;
    }

    // SMS messages collection
    match /smsMessages/{messageId} {
      // Org members can read messages in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Only server/Cloud Functions should create messages (via API routes)
      allow create: if false;

      // Admins can update message metadata
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Never delete messages (audit trail)
      allow delete: if false;
    }

    // SMS conversations collection
    match /smsConversations/{conversationId} {
      // Org members can read conversations in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Server creates conversations automatically
      allow create: if false;

      // Allow updates for marking as read
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Never delete conversations
      allow delete: if false;
    }

    // SMS templates collection
    match /smsTemplates/{templateId} {
      // Org members can read templates in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create templates
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update templates
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete templates
      allow delete: if isAdmin();
    }

    // SMS broadcasts collection (bulk messages)
    match /smsBroadcasts/{broadcastId} {
      // Org members can read broadcasts in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create broadcasts
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Server updates broadcast status
      allow update: if false;

      // Never delete broadcasts
      allow delete: if false;
    }

    // SMS opt-outs collection (compliance)
    match /smsOptOuts/{optOutId} {
      // Org members can read opt-outs in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Server manages opt-outs via webhooks
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    // Twilio phone numbers collection
    match /twilioPhoneNumbers/{numberId} {
      // Org members can read phone numbers in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can manage phone numbers
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      allow delete: if isAdmin();
    }

    // Line items library collection
    match /lineItems/{itemId} {
      // Org members can read line items in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create line items
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update line items
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete line items
      allow delete: if isAdmin();
    }

    // Line item price history collection
    match /lineItemPriceHistory/{historyId} {
      // Org members can read price history in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create price history entries
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Price history should not be modified or deleted
      allow update: if false;
      allow delete: if false;
    }

    // Estimate templates collection
    match /estimateTemplates/{templateId} {
      // Org members can read estimate templates in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create estimate templates
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update estimate templates
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete estimate templates
      allow delete: if isAdmin();
    }

    // ==========================================
    // Schedule Events Collection
    // ==========================================
    match /scheduleEvents/{eventId} {
      // Org members can read schedule events
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create schedule events
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update schedule events
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete schedule events
      allow delete: if isAdmin();
    }

    // ==========================================
    // Crew Availability Collection
    // ==========================================
    match /crewAvailability/{availId} {
      // Org members can read availability
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Users can set their own availability, admins can set for anyone
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        (request.resource.data.userId == request.auth.uid || getUserProfile().role in ['OWNER', 'PM']);

      // Users can update their own availability, admins can update anyone's
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        (resource.data.userId == request.auth.uid || getUserProfile().role in ['OWNER', 'PM']);

      // Admins can delete availability records
      allow delete: if isAdmin();
    }

    // ==========================================
    // Time Off Requests Collection
    // ==========================================
    match /timeOffRequests/{requestId} {
      // Org members can read time off requests
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Users can create their own time off requests
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Users can update their own pending requests, admins can update any
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        ((resource.data.userId == request.auth.uid && resource.data.status == 'pending') ||
         getUserProfile().role in ['OWNER', 'PM']);

      // Admins can delete time off requests
      allow delete: if isAdmin();
    }

    // ==========================================
    // Schedule Conflicts Collection
    // ==========================================
    match /scheduleConflicts/{conflictId} {
      // Org members can read conflicts
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // System creates conflicts automatically (admin-only for manual creation)
      allow create: if isAdmin();

      // Admins can update conflicts (mark resolved)
      allow update: if isAdmin();

      // Admins can delete conflicts
      allow delete: if isAdmin();
    }

    // ==========================================
    // Weather Forecasts Collection
    // ==========================================
    match /weatherForecasts/{forecastId} {
      // Org members can read weather data
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create weather forecasts
      allow create: if isAdmin();

      // Admins can update weather forecasts
      allow update: if isAdmin();

      // Admins can delete weather forecasts
      allow delete: if isAdmin();
    }

    // ==========================================
    // Schedule Preferences Collection
    // ==========================================
    match /schedulePreferences/{userId} {
      // Users can read their own preferences
      allow read: if isOwner(userId);

      // Users can create their own preferences
      allow create: if isOwner(userId);

      // Users can update their own preferences
      allow update: if isOwner(userId);

      // Users can delete their own preferences
      allow delete: if isOwner(userId);
    }

    // ==========================================
    // Accounting Integration Collections
    // ==========================================

    // Accounting connections collection (QuickBooks, Xero)
    match /accountingConnections/{connectionId} {
      // Org members can read accounting connections in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create accounting connections
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update accounting connections (sync settings, disconnect)
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete accounting connections
      allow delete: if isAdmin();
    }

    // Account mapping rules collection (chart of accounts mapping)
    match /accountMappingRules/{ruleId} {
      // Org members can read mapping rules in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create mapping rules
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update mapping rules
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete mapping rules
      allow delete: if isAdmin();
    }

    // ==========================================
    // Material & Equipment Tracking Collections
    // ==========================================

    // Organization-scoped materials, equipment, suppliers, etc.
    match /organizations/{orgId}/materials/{materialId} {
      // Org members can read materials
      allow read: if isSameOrg(orgId);

      // Admins can create materials
      allow create: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update materials
      allow update: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete materials
      allow delete: if isAdmin();
    }

    match /organizations/{orgId}/equipment/{equipmentId} {
      // Org members can read equipment
      allow read: if isSameOrg(orgId);

      // Admins can create equipment
      allow create: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update equipment (including checkout/return)
      allow update: if isSameOrg(orgId);

      // Admins can delete equipment
      allow delete: if isAdmin();
    }

    match /organizations/{orgId}/equipmentCheckouts/{checkoutId} {
      // Org members can read checkout records
      allow read: if isSameOrg(orgId);

      // Org members can create checkout records (checking out equipment)
      allow create: if isSameOrg(orgId);

      // Org members can update checkout records (returning equipment)
      allow update: if isSameOrg(orgId);

      // Admins can delete checkout records
      allow delete: if isAdmin();
    }

    match /organizations/{orgId}/suppliers/{supplierId} {
      // Org members can read suppliers
      allow read: if isSameOrg(orgId);

      // Admins can create suppliers
      allow create: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update suppliers
      allow update: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete suppliers
      allow delete: if isAdmin();
    }

    match /organizations/{orgId}/purchaseOrders/{orderId} {
      // Org members can read purchase orders
      allow read: if isSameOrg(orgId);

      // Admins can create purchase orders
      allow create: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update purchase orders
      allow update: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete purchase orders
      allow delete: if isAdmin();
    }

    match /organizations/{orgId}/materialAllocations/{allocationId} {
      // Org members can read allocations
      allow read: if isSameOrg(orgId);

      // Admins can create allocations
      allow create: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Org members can update allocations (marking materials as used)
      allow update: if isSameOrg(orgId);

      // Admins can delete allocations
      allow delete: if isAdmin();
    }

    match /organizations/{orgId}/materialTransactions/{transactionId} {
      // Org members can read transactions
      allow read: if isSameOrg(orgId);

      // Org members can create transactions (inventory adjustments)
      allow create: if isSameOrg(orgId);

      // Transactions should not be modified (audit trail)
      allow update: if false;
      allow delete: if false;
    }

    match /organizations/{orgId}/storageLocations/{locationId} {
      // Org members can read storage locations
      allow read: if isSameOrg(orgId);

      // Admins can create storage locations
      allow create: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update storage locations
      allow update: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete storage locations
      allow delete: if isAdmin();
    }

    match /organizations/{orgId}/lowStockAlerts/{alertId} {
      // Org members can read alerts
      allow read: if isSameOrg(orgId);

      // System creates alerts (admins for manual)
      allow create: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // Org members can update alerts (acknowledge)
      allow update: if isSameOrg(orgId);

      // Admins can delete alerts
      allow delete: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
