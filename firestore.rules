rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user profile exists
    function userProfileExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Helper function to get user's profile (only call after checking userProfileExists)
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if user has admin role
    function isAdmin() {
      return isAuthenticated() &&
             userProfileExists() &&
             getUserProfile().role in ['OWNER', 'PM'];
    }

    // Helper function to check if user belongs to the same org
    function isSameOrg(orgId) {
      return isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read (get) their own profile
      // Admins can read (get + list) any profile in their org
      // List queries: org members can list users where orgId matches their org
      allow read: if isOwner(userId) || isAdmin() || (
        isAuthenticated() &&
        userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId
      );

      // Users can create/set their own profile (onboarding flow uses setDoc with merge)
      // Admins can create user docs (new project page creates client users)
      allow create: if isOwner(userId) || isAdmin();

      // Users can update their own profile
      // Admins can update any profile
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete profiles
      allow delete: if isAdmin();
    }

    // Projects collection
    // BUG #1 FIX: Enhanced client isolation - clients ONLY see their own projects
    match /projects/{projectId} {
      // Read access with role-based filtering:
      // - Admins (OWNER/PM) can see all org projects
      // - Employees can see all org projects they're assigned to or all if not restricted
      // - Contractors can see projects they're assigned to
      // - Clients can ONLY see projects where they are the clientId or in clientIds
      allow read: if isAuthenticated() && userProfileExists() && (
        // Admins see all in their org
        (isAdmin() && resource.data.orgId == getUserProfile().orgId) ||
        // Employees/Contractors see projects in their org where they're assigned
        (getUserProfile().role in ['EMPLOYEE', 'CONTRACTOR', 'SUB'] &&
         resource.data.orgId == getUserProfile().orgId && (
          request.auth.uid == resource.data.pmId ||
          (resource.data.managerIds != null && request.auth.uid in resource.data.managerIds) ||
          (resource.data.workerIds != null && request.auth.uid in resource.data.workerIds)
        )) ||
        // Clients can ONLY see their own projects - critical security fix
        (getUserProfile().role == 'CLIENT' &&
         resource.data.orgId == getUserProfile().orgId && (
          request.auth.uid == resource.data.clientId ||
          (resource.data.clientIds != null && request.auth.uid in resource.data.clientIds)
        ))
      );

      // Only admins can create/update/delete projects
      allow create, update, delete: if isAdmin();

      // Project phases subcollection
      match /phases/{phaseId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAdmin();
      }

      // Quote sections subcollection
      match /quoteSections/{sectionId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAdmin();
      }

      // Client preferences subcollection
      match /clientPreferences/{docId} {
        allow read: if isAuthenticated();
        allow create, update: if isAuthenticated();
        allow delete: if isAdmin();
      }

      // Project activity subcollection (singular - legacy)
      match /activity/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }

      // Project activities subcollection (plural - used by activity page)
      match /activities/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }

      // Project notes subcollection
      match /notes/{noteId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        // Users can update/delete their own notes
        allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
    }

    // Organizations collection
    match /organizations/{orgId} {
      // Users can read their own organization
      allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;

      // Authenticated users can create an org (onboarding for OWNER role)
      allow create: if isAuthenticated();

      // Only admins can modify organizations
      allow update, delete: if isAdmin();

      // Phase templates (org-level, customizable by owner)
      match /phaseTemplates/{templateId} {
        allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
        allow create: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
        allow update, delete: if isAuthenticated() && userProfileExists() && getUserProfile().role == 'OWNER' && getUserProfile().orgId == orgId;
      }

      // Integrations subcollection (org-level third-party connections)
      match /integrations/{integrationId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }

      // Tax rates subcollection (org-level)
      match /taxRates/{taxRateId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }

      // Notification settings subcollection (org-level)
      match /notificationSettings/{settingId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }

      // QuickBooks entity mappings (local â†” QBO ID mappings)
      // Admin only - sensitive accounting linkage data
      match /qboEntityMappings/{mappingId} {
        allow read: if isAdmin() && getUserProfile().orgId == orgId;
        allow write: if false; // Admin SDK only (server-side sync)
      }

      // QuickBooks sync logs (audit trail)
      // Org members can read, server writes only
      match /accountingSyncLogs/{logId} {
        allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
        allow write: if false; // Admin SDK only
      }

      // QuickBooks accounting connection settings
      // Admin only - OAuth tokens and connection state
      match /accountingConnections/{connectionId} {
        allow read: if isAdmin() && getUserProfile().orgId == orgId;
        allow write: if false; // Admin SDK only (OAuth flow)
      }

      // Job Costs collection - individual cost entries per project
      // Org members can read, admins can write, or users can create from approved sources
      match /jobCosts/{costId} {
        allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;

        // Admins can create/update/delete job costs
        // Non-admins can create costs from timesheets/expenses (with source tracking)
        allow create: if isAuthenticated() && userProfileExists() &&
          getUserProfile().orgId == orgId &&
          request.resource.data.orgId == orgId && (
          isAdmin() ||
          request.resource.data.source in ['timesheet', 'expense']
        );

        allow update: if isAdmin() && getUserProfile().orgId == orgId;
        allow delete: if isAdmin() && getUserProfile().orgId == orgId;
      }

      // Project Profitability collection - aggregated cost/profit data per project
      // Admins can read, server writes only (calculated/aggregated data)
      match /projectProfitability/{projectId} {
        allow read: if isAuthenticated() && userProfileExists() &&
          getUserProfile().orgId == orgId && (
          isAdmin() ||
          getUserProfile().role in ['PM', 'EMPLOYEE']
        );
        allow write: if false; // Admin SDK only (calculated by aggregation functions)
      }

      // Job Cost Alerts - budget/margin warnings
      // Admins can read and acknowledge, server creates
      match /jobCostAlerts/{alertId} {
        allow read: if isAdmin() && getUserProfile().orgId == orgId;
        // Only allow updating the acknowledgement fields
        allow update: if isAdmin() && getUserProfile().orgId == orgId &&
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['isAcknowledged', 'acknowledgedBy', 'acknowledgedAt']);
        allow create, delete: if false; // Admin SDK only
      }
    }

    // Invites collection
    match /invites/{inviteId} {
      // Anyone authenticated can read invites (register page checks invite tokens)
      allow read: if isAuthenticated();

      // Admins can create and manage invites
      allow create, update, delete: if isAdmin();
    }

    // Tasks collection
    match /tasks/{taskId} {
      // Org members can read tasks in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins and employees can create tasks in their org
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];

      // Admins can update/delete; assignees can update status/hours (same org only)
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId && (
        isAdmin() ||
        request.auth.uid in resource.data.assignedTo
      );

      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Task comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() &&
          resource.data.userId == request.auth.uid;
      }

      // Task activity subcollection (read-only; written by Cloud Functions or client on mutations)
      match /activity/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }
    }

    // Time entries collection (root-level - legacy, prefer org-scoped version)
    match /timeEntries/{entryId} {
      // Users can read time entries in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Users can create time entries in their org
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Users can update their own time entries (clock out updates)
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        resource.data.userId == request.auth.uid;

      // Admins can delete time entries in their org
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Bids collection (subcontractor bids)
    match /bids/{bidId} {
      // Org members can read bids in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Subs can create bids in their org
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Subs can update their own bids, admins can manage
      allow update, delete: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId && (
        resource.data.subId == request.auth.uid || isAdmin()
      );
    }

    // Invoices collection (root-level - prefer org-scoped version)
    match /invoices/{invoiceId} {
      // Org members can read invoices in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create invoices in their org
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Admins can update/delete invoices in their org
      allow update, delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Photos collection
    // Note: Photos are linked to projects, and project access is controlled separately.
    match /photos/{photoId} {
      // Org members can read photos in their org's projects
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Org members can upload photos (field workers)
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Admins can update/delete; users can update their own photos
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId && (
        isAdmin() ||
        resource.data.userId == request.auth.uid
      );
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Issues collection
    match /issues/{issueId} {
      // Org members can read issues in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Org members can report issues
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Admins can update/delete issues in their org
      allow update, delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Daily logs collection (root-level - prefer org-scoped version)
    match /dailyLogs/{logId} {
      // Org members can read logs in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Org members can create logs
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Admins can update/delete logs in their org
      allow update, delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Schedule items collection
    match /scheduleItems/{itemId} {
      // Org members can read schedule items in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Only admins can modify schedule in their org
      allow create: if isAdmin() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;
      allow update, delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Schedule assignments collection
    match /scheduleAssignments/{assignmentId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAdmin() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;
      allow update, delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Availability defaults (weekly recurring)
    match /availabilityDefaults/{defaultId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create, update: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Availability overrides (date-specific)
    match /availability/{availId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create, update: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Scopes collection (scope of work)
    match /scopes/{scopeId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Subcontractors collection
    match /subcontractors/{subId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() &&
        userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Sub assignments collection
    match /sub_assignments/{assignmentId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Client onboarding tokens collection
    match /clientOnboardingTokens/{tokenId} {
      // Anyone can read (public onboarding page validates tokens)
      allow read: if true;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      // Allow update for marking token as used (public page does this)
      allow update: if true;
      allow delete: if isAdmin();
    }

    // Change orders collection
    match /changeOrders/{orderId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Bid solicitations collection
    match /bidSolicitations/{solId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Sub assignments collection (camelCase version - also used alongside sub_assignments)
    match /subAssignments/{assignmentId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // SOW templates collection
    match /sowTemplates/{templateId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create, update: if isAuthenticated() &&
        userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Activity log collection
    match /activityLog/{logId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;
      allow update, delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Activity collection (org-level activity feed)
    match /activity/{activityId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.organizationId == getUserProfile().orgId;
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.organizationId == getUserProfile().orgId;
      allow update, delete: if false;
    }

    // Audit log collection (security events - admin-only read, authenticated write)
    match /auditLog/{logId} {
      // Only admins can read audit logs (security sensitive)
      allow read: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      // Authenticated users can create audit log entries for their org
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;
      // Audit logs are immutable - no updates or deletes
      allow update, delete: if false;
    }

    // Expenses collection (root-level - prefer org-scoped version)
    match /expenses/{expenseId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // ==========================================
    // Safety Collections (CRITICAL - was missing)
    // ==========================================

    // Safety Inspections collection
    match /safetyInspections/{inspectionId} {
      // Org members can read safety inspections
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins and employees can create inspections
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];

      // Admins can update/delete, employees can update their own
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId && (
        isAdmin() ||
        resource.data.inspectorId == request.auth.uid
      );

      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Safety Incidents collection
    match /safetyIncidents/{incidentId} {
      // Org members can read safety incidents
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins and employees can report incidents
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId;

      // Admins can update incidents
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete incidents
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // Toolbox Talks collection
    match /toolboxTalks/{talkId} {
      // Org members can read toolbox talks
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create toolbox talks
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update toolbox talks
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete toolbox talks
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // ==========================================
    // Tools & Equipment Collections (CRITICAL - was missing)
    // ==========================================

    // Tools collection (equipment inventory)
    match /tools/{toolId} {
      // Org members can read tools in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create tools
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can update tools (including checkout/return status)
      allow update: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId &&
        getUserProfile().role in ['OWNER', 'PM'];

      // Admins can delete tools
      allow delete: if isAdmin() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;
    }

    // ==========================================
    // Leads & Service Tickets Collections (CRITICAL - was missing)
    // ==========================================

    // Leads collection (sales pipeline)
    match /leads/{leadId} {
      // Org members can read leads in their org
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.orgId == getUserProfile().orgId;

      // Admins can create leads
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.orgId == getUserProfile().orgId &&
