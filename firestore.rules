      allow create: if isSameOrg(orgId);
      allow update: if isSameOrg(orgId);

      // Usage records should not be deleted (audit trail)
      allow delete: if false;
    }

    // ==========================================
    // Organization-Scoped AI Security Logs Collection
    // ==========================================
    match /organizations/{orgId}/aiSecurityLogs/{logId} {
      // Only admins can read security logs
      allow read: if isSameOrg(orgId) && getUserProfile().role in ['OWNER', 'PM'];

      // System creates security logs via API routes
      allow create: if isSameOrg(orgId);

      // Security logs are immutable
      allow update, delete: if false;
    }

    // ==========================================
    // Organization-Scoped Assistant Conversations Collection
    // ==========================================
    match /organizations/{orgId}/assistantConversations/{conversationId} {
      // Org members can read and write their conversations
      allow read, write: if isSameOrg(orgId);

      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isSameOrg(orgId);
      }
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
