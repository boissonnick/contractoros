rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user profile exists
    function userProfileExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Helper function to get user's profile (only call after checking userProfileExists)
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if user has admin role
    function isAdmin() {
      return isAuthenticated() &&
             userProfileExists() &&
             getUserProfile().role in ['OWNER', 'PM'];
    }

    // Helper function to check if user belongs to the same org
    function isSameOrg(orgId) {
      return isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read (get) their own profile
      // Admins can read (get + list) any profile
      allow read: if isOwner(userId) || isAdmin();

      // Users can create/set their own profile (onboarding flow uses setDoc with merge)
      // Admins can create user docs (new project page creates client users)
      allow create: if isOwner(userId) || isAdmin();

      // Users can update their own profile
      // Admins can update any profile
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete profiles
      allow delete: if isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      // Admins can list all projects in their org (queries use where('orgId', '==', ...))
      // Other users can read projects they are assigned to
      allow read: if isAuthenticated() && (
        isAdmin() ||
        (userProfileExists() && resource.data.orgId == getUserProfile().orgId && (
          request.auth.uid == resource.data.clientId ||
          request.auth.uid == resource.data.pmId ||
          (resource.data.clientIds != null && request.auth.uid in resource.data.clientIds) ||
          (resource.data.managerIds != null && request.auth.uid in resource.data.managerIds) ||
          (resource.data.workerIds != null && request.auth.uid in resource.data.workerIds)
        ))
      );

      // Only admins can create/update/delete projects
      allow create, update, delete: if isAdmin();

      // Project phases subcollection
      match /phases/{phaseId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAdmin();
      }

      // Quote sections subcollection
      match /quoteSections/{sectionId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAdmin();
      }

      // Client preferences subcollection
      match /clientPreferences/{docId} {
        allow read: if isAuthenticated();
        allow create, update: if isAuthenticated();
        allow delete: if isAdmin();
      }

      // Project activity subcollection (singular - legacy)
      match /activity/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }

      // Project activities subcollection (plural - used by activity page)
      match /activities/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }

      // Project notes subcollection
      match /notes/{noteId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        // Users can update/delete their own notes
        allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
    }

    // Organizations collection
    match /organizations/{orgId} {
      // Users can read their own organization
      allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;

      // Authenticated users can create an org (onboarding for OWNER role)
      allow create: if isAuthenticated();

      // Only admins can modify organizations
      allow update, delete: if isAdmin();

      // Phase templates (org-level, customizable by owner)
      match /phaseTemplates/{templateId} {
        allow read: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
        allow create: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
        allow update, delete: if isAuthenticated() && userProfileExists() && getUserProfile().role == 'OWNER' && getUserProfile().orgId == orgId;
      }

      // Integrations subcollection (org-level third-party connections)
      match /integrations/{integrationId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }

      // Tax rates subcollection (org-level)
      match /taxRates/{taxRateId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }

      // Notification settings subcollection (org-level)
      match /notificationSettings/{settingId} {
        allow read, write: if isAuthenticated() && userProfileExists() && getUserProfile().orgId == orgId;
      }
    }

    // Invites collection
    match /invites/{inviteId} {
      // Anyone authenticated can read invites (register page checks invite tokens)
      allow read: if isAuthenticated();

      // Admins can create and manage invites
      allow create, update, delete: if isAdmin();
    }

    // Tasks collection
    match /tasks/{taskId} {
      // Org members can read tasks; assigned subs can read their tasks
      allow read: if isAuthenticated();

      // Admins and employees can create tasks
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];

      // Admins can update/delete; assignees can update status/hours
      allow update: if isAuthenticated() && (
        isAdmin() ||
        request.auth.uid in resource.data.assignedTo
      );

      allow delete: if isAdmin();

      // Task comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() &&
          resource.data.userId == request.auth.uid;
      }

      // Task activity subcollection (read-only; written by Cloud Functions or client on mutations)
      match /activity/{activityId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }
    }

    // Time entries collection
    match /timeEntries/{entryId} {
      // Users can read their own time entries
      allow read: if isAuthenticated();

      // Users can create their own time entries (field workers clock in/out)
      allow create: if isAuthenticated();

      // Users can update their own time entries (clock out updates)
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins can delete time entries
      allow delete: if isAdmin();
    }

    // Bids collection (subcontractor bids)
    match /bids/{bidId} {
      // Authenticated users can read bids relevant to them
      allow read: if isAuthenticated();

      // Subs can create bids, admins can manage
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (
        resource.data.subId == request.auth.uid || isAdmin()
      );
    }

    // Invoices collection
    match /invoices/{invoiceId} {
      // Authenticated users can read invoices relevant to them
      allow read: if isAuthenticated();

      // Admins and subs can create invoices
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Photos collection
    match /photos/{photoId} {
      // Authenticated users can read photos
      allow read: if isAuthenticated();

      // Authenticated users can upload photos (field workers)
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Issues collection
    match /issues/{issueId} {
      // Authenticated users can read issues in their org
      allow read: if isAuthenticated();

      // Authenticated users can report issues
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Daily logs collection
    match /dailyLogs/{logId} {
      // Authenticated users can read logs
      allow read: if isAuthenticated();

      // Admins and PMs can create/manage logs
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Schedule items collection
    match /scheduleItems/{itemId} {
      // Authenticated users can read schedule items
      allow read: if isAuthenticated();

      // Only admins can modify schedule
      allow create, update, delete: if isAdmin();
    }

    // Schedule assignments collection
    match /scheduleAssignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Availability defaults (weekly recurring)
    match /availabilityDefaults/{defaultId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() &&
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Availability overrides (date-specific)
    match /availability/{availId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() &&
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Scopes collection (scope of work)
    match /scopes/{scopeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Subcontractors collection
    match /subcontractors/{subId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin();
    }

    // Sub assignments collection
    match /sub_assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Client onboarding tokens collection
    match /clientOnboardingTokens/{tokenId} {
      // Anyone can read (public onboarding page validates tokens)
      allow read: if true;
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      // Allow update for marking token as used (public page does this)
      allow update: if true;
      allow delete: if isAdmin();
    }

    // Change orders collection
    match /changeOrders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Bid solicitations collection
    match /bidSolicitations/{solId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // SOW templates collection
    match /sowTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin();
    }

    // Activity log collection
    match /activityLog/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Activity collection (org-level activity feed)
    match /activity/{activityId} {
      allow read: if isAuthenticated() && userProfileExists() &&
        resource.data.organizationId == getUserProfile().orgId;
      allow create: if isAuthenticated() && userProfileExists() &&
        request.resource.data.organizationId == getUserProfile().orgId;
      allow update, delete: if false;
    }

    // Expenses collection
    match /expenses/{expenseId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow delete: if isAdmin();
    }

    // RFIs collection (Request for Information)
    match /rfis/{rfiId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Punch items collection
    match /punchItems/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Change orders collection (alternate name used by useChangeOrders hook)
    match /change_orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Estimates collection
    match /estimates/{estimateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Weekly timesheets collection
    match /weeklyTimesheets/{timesheetId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow delete: if isAdmin();
    }

    // Geofences collection
    match /geofences/{geofenceId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Payroll config collection
    match /payrollConfig/{configId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Financials collection (project financial summaries)
    match /financials/{financialId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Integrations collection (third-party connections)
    match /integrations/{integrationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow update: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM'];
      allow delete: if isAdmin();
    }

    // Submittals collection
    match /submittals/{submittalId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        userProfileExists() &&
        getUserProfile().role in ['OWNER', 'PM', 'EMPLOYEE'];
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Selections collection (client material selections)
    match /selections/{selectionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Tax rates collection (top-level, org-scoped)
    match /taxRates/{taxRateId} {
      allow read: if isAuthenticated() && userProfileExists() && resource.data.orgId == getUserProfile().orgId;
      allow create: if isAuthenticated() && userProfileExists() && request.resource.data.orgId == getUserProfile().orgId;
      allow update: if isAuthenticated() && userProfileExists() && resource.data.orgId == getUserProfile().orgId;
      allow delete: if isAdmin();
    }

    // Notification preferences collection (user-level preferences)
    match /notificationPreferences/{prefId} {
      // Users can read their own notification preferences
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Users can create their own notification preferences
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Users can update their own notification preferences
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Users can delete their own notification preferences (or admins)
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Notifications collection (app notifications for users)
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // System can create notifications (Cloud Functions), or admins
      allow create: if isAuthenticated();

      // Users can mark their own notifications as read
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Admins can delete notifications
      allow delete: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
